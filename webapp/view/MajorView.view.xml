<mvc:View	controllerName="com.SMT.SMART_TABLE_VIEW.controller.MajorView" 
			xmlns:mvc="sap.ui.core.mvc" 
			displayBlock="true" 
			xmlns="sap.m"
			xmlns:smartTable="sap.ui.comp.smarttable"
			xmlns:core="sap.ui.core"
			xmlns:l="sap.ui.layout">
	<App id="app">
		<pages>
			<Page title="SMART TABLES VIEW WITH SPLITPANES">
				<content>
					<l:ResponsiveSplitter defaultPane="default">
						<l:PaneContainer orientation="Horizontal">
							<l:PaneContainer orientation="Vertical">
								<l:SplitPane id="T1">
									<smartTable:SmartTable  id="ST1"
															entitySet="Categories"
															visible="true"
															tableType="ResponsiveTable"
															useVariantManagement="false"
															showVariantManagement="false"
															useTablePersonalisation="false"
															showTablePersonalisation="false"
															useExportToExcel="false"
															showRowCount="false"
															header="Category"
															demandPopin="true"
															enableAutoBinding="true"
															showFullScreenButton="false">
										<Table  id="ST11"
												mode="SingleSelectMaster"
												selectionChange="select1"/>
									</smartTable:SmartTable>
								</l:SplitPane>
								<l:SplitPane id="T2">
									<smartTable:SmartTable	id="ST2"
															visible="true"
															entitySet="Products"
															tableType="ResponsiveTable"
															useVariantManagement="false"
															showVariantManagement="false"
															useTablePersonalisation="true"
															showTablePersonalisation="true"
															useExportToExcel="false"
															showRowCount="false"
															header="Product"
															enableAutoBinding="true">
										<Table  id="ST22"
												mode="SingleSelectMaster"
												selectionChange="select2"
												visible="false"/>
									</smartTable:SmartTable>
								</l:SplitPane>
								<l:SplitPane id="T3">
									<smartTable:SmartTable
													id="ST3"
													visible="true"
													entitySet="Order_Details"
													tableType="ResponsiveTable"
													useVariantManagement="false"
													showVariantManagement="false"
													useTablePersonalisation="false"
													showTablePersonalisation="false"
													useExportToExcel="false"
													showRowCount="false"
													header="Order"
													enableAutoBinding="true">
										<Table  id="ST33"
												mode="SingleSelectMaster"
												selectionChange="select3"
												visible="false"/>
									</smartTable:SmartTable>
								</l:SplitPane>
							</l:PaneContainer>
							<l:PaneContainer orientation="Vertical">
								<l:SplitPane  id="rightBig">
									<Panel headerText="Minimum parent width 600"/>
								</l:SplitPane>
							<l:PaneContainer orientation="Horizontal">
								<l:SplitPane  id="right1small">
									<Panel headerText="Minimum parent width 600"/>
								</l:SplitPane>
								<l:SplitPane id="right2small">
									<Panel headerText="Minimum parent width 1000"/>
								</l:SplitPane>
							</l:PaneContainer>
							</l:PaneContainer>
						</l:PaneContainer>
					</l:ResponsiveSplitter>	
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>