<mvc:View	controllerName="com.SMT.SMART_TABLE_VIEW.controller.MajorView" 
			xmlns:mvc="sap.ui.core.mvc" 
			displayBlock="true" 
			xmlns="sap.m"
			xmlns:smartTable="sap.ui.comp.smarttable"
			xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
			xmlns:core="sap.ui.core"
			xmlns:l="sap.ui.layout"
			xmlns:f="sap.ui.layout.form">
	<App id="app">
		<pages>
			<Page showHeader="false" title="SMART TABLES VIEW WITH SPLITPANES AND HANA DB">
				<content>
					<l:ResponsiveSplitter defaultPane="default">
						<l:PaneContainer orientation="Horizontal">
							<l:PaneContainer id="PP" orientation="Vertical">
								<l:layoutData>
								      <l:SplitterLayoutData id="SLDPP" resizable="false" size="100%"/>
								</l:layoutData>
								<l:SplitPane id="T1">
									<smartTable:SmartTable  id="ST1"
															entitySet="Categories"
															visible="true"
															tableType="ResponsiveTable"
															useVariantManagement="false"
															showVariantManagement="false"
															useTablePersonalisation="false"
															showTablePersonalisation="false"
															useExportToExcel="false"
															showRowCount="true"
															header="Category"
															demandPopin="true"
															enableAutoBinding="true"
															showFullScreenButton="false"
															requestAtLeastFields="PRODUCTID">
										<Table  id="ST11"
												sticky="ColumnHeaders"
												mode="MultiSelect"
												selectionChange="select1">
											<headerToolbar>
												<Toolbar>
													<ToolbarSpacer/>
													<Button id="onRemoveSelection" text="Remove Selections" width="100%" press="onRemoveSelection"/>
												</Toolbar>
											</headerToolbar>
										</Table>
									</smartTable:SmartTable>
								</l:SplitPane>
								<l:SplitPane id="T2">
									<l:layoutData>
								      <l:SplitterLayoutData id="SLD2" resizable="false" size="0%"/>
								    </l:layoutData>
									<VBox fitContainer="true">
										<smartFilterBar:SmartFilterBar id="smartFilterBar" persistencyKey="UniqueAndStablePersistencyKey"
											considerSelectionVariants="true" entitySet="Products" useDateRangeType="true" visible="false">
											<smartFilterBar:controlConfiguration>
												<smartFilterBar:ControlConfiguration key="PRODUCTID" visibleInAdvancedArea="true" >
												</smartFilterBar:ControlConfiguration>
												<smartFilterBar:ControlConfiguration key="PRICE" visibleInAdvancedArea="true" >
												</smartFilterBar:ControlConfiguration>
												<smartFilterBar:ControlConfiguration key="CURRENCY" visibleInAdvancedArea="true" >
												</smartFilterBar:ControlConfiguration>
											</smartFilterBar:controlConfiguration>
											<smartFilterBar:layoutData>
												<FlexItemData shrinkFactor="0"/>
											</smartFilterBar:layoutData>
										</smartFilterBar:SmartFilterBar>
										<smartTable:SmartTable	id="ST2"
																visible="true"
																entitySet="Products"
																smartFilterId="smartFilterBar"
																tableType="ResponsiveTable"
																useVariantManagement="false"
																showVariantManagement="false"
																useTablePersonalisation="false"
																showTablePersonalisation="false"
																useExportToExcel="false"
																showRowCount="true"
																header="Product"
																showFullScreenButton="true"
																enableAutoBinding="false"
																beforeRebindTable="onBeforeRebindTable2"
																requestAtLeastFields="PARTNERID">
											<Table  id="ST22"
													sticky="ColumnHeaders"
													mode="MultiSelect"
													selectionChange="select2"
													visible="false"/>
										</smartTable:SmartTable>
									</VBox>
								</l:SplitPane>
								<l:SplitPane id="T3">
									<l:layoutData>
								      <l:SplitterLayoutData id="SLD3" resizable="false" size="0%"/>
								    </l:layoutData>
									<smartTable:SmartTable
													id="ST3"
													visible="true"
													entitySet="Orders"
													tableType="ResponsiveTable"
													useVariantManagement="false"
													showVariantManagement="false"
													useTablePersonalisation="false"
													showTablePersonalisation="false"
													useExportToExcel="false"
													showRowCount="true"
													header="Order"
													showFullScreenButton="true"
													enableAutoBinding="false"
													beforeRebindTable="onBeforeRebindTable3"
													requestAtLeastFields="PURCHASEORDERID">
										<Table  id="ST33"
												sticky="ColumnHeaders"
												mode="SingleSelectMaster"
												selectionChange="select3"
												visible="false"/>
									</smartTable:SmartTable>
								</l:SplitPane>
							</l:PaneContainer>
							<l:PaneContainer orientation="Vertical">
								<l:SplitPane  id="rightBig">
									<l:layoutData>
								      <l:SplitterLayoutData id="SLDRB" resizable="false" size="100%"/>
								    </l:layoutData>
										<f:Form id="FormCustomer"
											editable="false"
											visible="false">
										<f:title>
											<core:Title text="Partner Details" />
										</f:title>
										<f:layout>
											<f:ResponsiveGridLayout labelSpanXL="3"
																	labelSpanL="3"
																	labelSpanM="3"
																	labelSpanS="12"
																	adjustLabelSpan="false"
																	emptySpanXL="4"
																	emptySpanL="4"
																	emptySpanM="4"
																	emptySpanS="0"
																	columnsXL="1"
																	columnsL="1"
																	columnsM="1"
																	singleContainerFullSize="false" />
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Partner ID">
														<f:fields>
															<Text text="{PARTNERID}" id="PartnerID1"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Partner Role">
														<f:fields>
															<Text text="{PARTNERROLE}" id="PartnerRole"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Email Address">
														<f:fields>
															<Text text="{EMAILADDRESS}" id="EmailAddress" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Phone Number">
														<f:fields>
															<Text text="{PHONENUMBER}" id="PhoneNumber" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Web Address">
														<f:fields>
															<Text text="{WEBADDRESS}" id="WebAddress"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Address ID">
														<f:fields>
															<Text text="{ADDRESSES_ADDRESSID}" id="AddressID" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Company Name">
														<f:fields>
															<Text text="{COMPANYNAME}"  id="CompanyName" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Legal Form">
														<f:fields>
															<Text text="{LEGALFORM}" id="LegalForm" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Currency">
														<f:fields>
															<Text text="{CURRENCY}"  id="Currency1" />
														</f:fields>
													</f:FormElement>
													<f:FormElement>
														<f:fields>
															<HBox id="googleMap" height="300px" width="100%"></HBox>
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
								</l:SplitPane>
							<l:PaneContainer orientation="Horizontal">
								<l:SplitPane  id="right1small">
								<l:layoutData>
								      <l:SplitterLayoutData id="SLDSS" resizable="false" size="100%"/>
								</l:layoutData>
									<f:Form id="FormEmployee"
											editable="false"
											visible="false">
										<f:title>
											<core:Title text="Employee Details" />
										</f:title>
										<f:layout>
											<f:ResponsiveGridLayout labelSpanXL="3"
																	labelSpanL="3"
																	labelSpanM="3"
																	labelSpanS="12"
																	adjustLabelSpan="false"
																	emptySpanXL="4"
																	emptySpanL="4"
																	emptySpanM="4"
																	emptySpanS="0"
																	columnsXL="1"
																	columnsL="1"
																	columnsM="1"
																	singleContainerFullSize="false"/>
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Employee ID">
														<f:fields>
															<Text text="{EMPLOYEEID}" id="EmployeeID"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Last Name">
														<f:fields>
															<Text text="{NAME_LAST}" id="LastName"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="First Name">
														<f:fields>
															<Text text="{NAME_FIRST}" id="FirstName" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Sex">
														<f:fields>
															<Text text="{SEX}" id="Sex" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Language">
														<f:fields>
															<Text text="{LANGUAGE}" id="Language" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Email Address">
														<f:fields>
															<Text text="{EMAILADDRESS}" id="EmailAddress1"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Login Name">
														<f:fields>
															<Text text="{LOGINNAME}" id="LoginName" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Address ID">
														<f:fields>
															<Text text="{ADDRESSID}"  id="AddressID1" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Currency">
														<f:fields>
															<Text text="{CURRENCY}" id="Currency2" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Salary Amount">
														<f:fields>
															<Text text="{SALARYAMOUNT}"  id="SalaryAmount" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Account Number">
														<f:fields>
															<Text text="{ACCOUNTNUMBER}" id="AccountNumber" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Bank ID">
														<f:fields>
															<Text text="{BANKID}"  id="BankID" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Bank Name">
														<f:fields>
															<Text text="{BANKNAME}" id="BankName" />
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
								</l:SplitPane>
								<l:SplitPane id="right2small">
									<f:Form id="FormDetails"
											editable="false"
											visible="false">
										<f:title>
											<core:Title text="Order Details" />
										</f:title>
										<f:layout>
											<f:ResponsiveGridLayout labelSpanXL="3"
																		labelSpanL="3"
																		labelSpanM="3"
																		labelSpanS="12"
																		adjustLabelSpan="false"
																		emptySpanXL="4"
																		emptySpanL="4"
																		emptySpanM="4"
																		emptySpanS="0"
																		columnsXL="1"
																		columnsL="1"
																		columnsM="1"
																		singleContainerFullSize="false" />
										</f:layout>
										<f:formContainers>
											<f:FormContainer>
												<f:formElements>
													<f:FormElement label="Order ID">
														<f:fields>
															<Text text="{PURCHASEORDERID}" id="OrderID"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Partner ID">
														<f:fields>
															<Text text="{PARTNERID}" id="PartnerID"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Gross Amount">
														<f:fields>
															<Text text="{GROSSAMOUNT}" id="GrossAmount" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Net Amount">
														<f:fields>
															<Text text="{NETAMOUNT}" id="NetAmount" />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Tax Amount">
														<f:fields>
															<Text text="{TAXAMOUNT}" id="TaxAmount"  />
														</f:fields>
													</f:FormElement>
													<f:FormElement label="Currency">
														<f:fields>
															<Text text="{CURRENCY}" id="Currency" />
														</f:fields>
													</f:FormElement>
												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>
								</l:SplitPane>
							</l:PaneContainer>
							</l:PaneContainer>
						</l:PaneContainer>
					</l:ResponsiveSplitter>	
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>